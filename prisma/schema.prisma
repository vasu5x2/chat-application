generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String       @id @default(cuid())
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  // For optional auth (bonus). For now, anonymous users can be tracked by cookie id.
  email     String?      @unique
  name      String?
  sessions  ChatSession[]
  @@index([email])
}

model ChatSession {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  title     String
  userId    String?
  user      User?     @relation(fields: [userId], references: [id])
  messages  Message[]
  @@index([userId, createdAt])
}

enum Role {
  user
  assistant
  system
}

model Message {
  id         String      @id @default(cuid())
  createdAt  DateTime    @default(now())
  sessionId  String
  session    ChatSession @relation(fields: [sessionId], references: [id])
  role       Role
  content    String
  @@index([sessionId, createdAt])
}

